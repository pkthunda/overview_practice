<h1>New Developer</h1>

<%= form_for(@developer) do |f| %>
  <div class="field">
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
  </div>
<br>
  <div class="field">
  <%= f.label :email, "Email:" %>
  <%= f.text_field :email, class: 'form-control' %>
</br>
<br>
  <div class="field">
  <%= f.label :password, "Password:" %>
  <%= f.password_field :password, class: 'form-control' %>
</br>
<br>
  <div class="actions">
  <%= f.submit %>
</br>
<br>
  <% end %>
</br>

<br><%= link_to 'Back', developers_path %></br>
